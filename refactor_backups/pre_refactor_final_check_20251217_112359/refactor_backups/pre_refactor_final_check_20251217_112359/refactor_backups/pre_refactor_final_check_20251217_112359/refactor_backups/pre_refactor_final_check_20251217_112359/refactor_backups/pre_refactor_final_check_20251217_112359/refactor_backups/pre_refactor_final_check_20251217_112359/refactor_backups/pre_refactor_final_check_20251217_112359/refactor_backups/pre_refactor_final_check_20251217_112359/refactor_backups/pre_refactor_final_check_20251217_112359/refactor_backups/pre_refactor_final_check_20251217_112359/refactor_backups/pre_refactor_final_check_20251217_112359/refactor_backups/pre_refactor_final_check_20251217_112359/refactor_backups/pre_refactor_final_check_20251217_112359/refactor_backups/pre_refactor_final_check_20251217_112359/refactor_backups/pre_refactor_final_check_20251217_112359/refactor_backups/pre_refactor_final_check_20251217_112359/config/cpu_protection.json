{
  "cpu_protection": {
    "enabled": true,
    "max_cpu_percent": 90.0,
    "check_interval": 0.5,
    "throttle_threshold": 85.0,
    "emergency_threshold": 95.0,
    "max_workers_reduction": {
      "high_cpu": 0.5,
      "very_high_cpu": 0.25
    },
    "auto_adjust_workers": true,
    "force_serial_threshold": 95.0
  },
  "ocr_protection": {
    "max_concurrent_files": 8,
    "max_pages_per_batch": 20,
    "cpu_check_interval": 1.0,
    "auto_reduce_batch_size": true
  },
  "parallel_processing": {
    "default_threshold": 2,
    "cpu_aware_scheduling": true,
    "max_thread_pool_size": 16,
    "adaptive_chunk_size": true
  },
  "emergency_settings": {
    "auto_shutdown_cpu_threshold": 98.0,
    "emergency_sleep_duration": 2.0,
    "process_priority_adjustment": true,
    "memory_cleanup_threshold": 90.0
  },
  "monitoring": {
    "log_cpu_usage": true,
    "alert_on_high_usage": true,
    "performance_metrics": true,
    "resource_usage_history": 100
  }
}
