{
  "cpu_threshold": 85,
  "memory_threshold": 90,
  "disk_threshold": 95,
  "check_interval": 5,
  "cooldown_period": 300,
  "enable_desktop_notifications": true,
  "enable_console_alerts": true,
  "enable_log_alerts": true,
  "alert_levels": {
    "warning": {
      "cpu": 75,
      "memory": 80,
      "disk": 85
    },
    "critical": {
      "cpu": 90,
      "memory": 95,
      "disk": 98
    }
  }
}